# Test Environment Variables
# Copy from .env and modify as needed for testing

# Database (use test database)
DATABASE_URL="postgresql://postgres.your-project:your-password@aws-1-ca-central-1.pooler.supabase.com:5432/postgres?schema=public&pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://postgres.your-project:your-password@aws-1-ca-central-1.pooler.supabase.com:5432/postgres?schema=public"

# Redis (can use same or separate test instance)
REDIS_URL="redis://default:your-redis-password@redis-12345.us-east-1.redis.amazonaws.com:6379"

# Feature Flags for Testing
USE_PG_TRGM_FUZZY_MATCHING=false
PG_TRGM_ROLLOUT_PERCENTAGE=0
ENABLE_PERFORMANCE_MONITORING=true

# Shopify (use test store or mock)
SHOPIFY_API_KEY="test_api_key"
SHOPIFY_API_SECRET="test_api_secret"
SHOPIFY_SCOPES="read_products,write_products,read_orders,write_orders"
HOST="http://localhost:3000"

# Session
SESSION_SECRET="test_session_secret_change_in_production"

# Node Environment
NODE_ENV=test

# Note: Update DATABASE_URL and REDIS_URL with your actual test credentials
