# Production Environment Configuration for Shopify PO Sync Pro
# Copy this to .env and fill in your production values

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_inventory,write_inventory
APP_URL=https://your-app-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Server Configuration
API_PORT=3003
NODE_ENV=production
FRONTEND_URL=https://your-app-domain.com

# Security Configuration
SESSION_SECRET=your_secure_session_secret_here

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info

# Development overrides (remove in production)
# NODE_ENV=development
# API_PORT=3003