{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --include=dev && cd api && npm install",
  "rewrites": [
    {
      "source": "/api/queues/:path*",
      "destination": "/api/src/queues/:path*.js"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/src/server.js"
    }
  ],
  "functions": {
    "api/src/server.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/src/queues/**": {
      "maxDuration": 300,
      "memory": 2048
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}