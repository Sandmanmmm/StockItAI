{
  "version": 2,
  "name": "shopify-po-sync-pro",
  "builds": [
    {
      "src": "api/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/src/server.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "npm install && cd api && npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}