{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --include=dev && cd api && npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/src/server.js"
    }
  ],
  "functions": {
    "api/src/server.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/src/queues/process-upload.js": {
      "maxDuration": 900,
      "memory": 2048
    }
  },
  "queues": {
    "process-upload": {
      "handler": "api/src/queues/process-upload.js",
      "maxDuration": 900,
      "memory": 2048
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}