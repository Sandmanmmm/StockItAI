{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install --include=dev && cd api && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-workflows",
      "schedule": "* * * * *"
    }
  ],
  "functions": {
    "api/src/server.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/cron/process-workflows.js": {
      "maxDuration": 300,
      "memory": 2048
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}